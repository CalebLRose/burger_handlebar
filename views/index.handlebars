<nav>
	<div class="nav-wrapper">
		<a href="#" class="brand-logo center">JJ's Burgers</a>
	</div>
</nav>

<div class="container">
	<div class="row">
		<div class="col s6 m6 offset-s3 offset-m3 center">
			<h1>Eat One</h1>
		</div>
	</div>
	<div class="row">
		{{#each burgerInfo}}
		{{#unless this.devoured}}
		<div class="col s12 m6">
			<div class="card">
				<div class="card-content">
					<span class="card-title">{{this.burger_name}}</span>
					<a data-id={{this.id}} data-condition="true" class="waves-effect waves-light btn devourBtn"><i class="material-icons left">restaurant</i>Eat It</a>
				</div>
			</div>
		</div>
		{{/unless}}
		{{/each}}
	</div>
	<div class="row">
		<div class="col s6 m6 offset-s3 offset-m3 center">
			<h3>Eaten</h3>
		</div>
		{{#each burgerInfo}}
		{{#if this.devoured}}
		<div class="col s12 m6">
			<div class="card">
				<div class="card-content">
					<span class="card-title">{{this.burger_name}}</span>
					<a data-id={{this.id}} data-condition="false" class="waves-effect waves-light btn devourBtn"><i class="material-icons left">restaurant</i>Make It Again</a>
				</div>
			</div>
		</div>
		{{/if}}
		{{/each}}
	</div>	
</div>
<div class="fixed-action-btn">
	<a href="#addModal" id="open" class="btn-floating btn-large waves-effect waves-light red modal-trigger"><i class="material-icons">add</i></a>
</div>
<div id="addModal" class="modal">
	<div class="modal-content">
		<form action="/burgers/create" method="POST">
				<input placeholder="Burger Name" type="text" class="input-field col s8 m6" name="burger_name">
				<label for="burger_name">Create a new Burger!</label>
				<button type="submit" class="right waves-effect waves-light btn" id="createBtn">Submit</button>	
		</form>
	</div>
</div>